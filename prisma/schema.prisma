// ==================== WORKXFLOW - DOCUMENT ASSEMBLY ====================

// Workxflow document bundle - dagvaarding met producties
model WorkxflowBundle {
  id              String   @id @default(cuid())

  // Metadata
  title           String   // Naam van de bundel (bijv. "Dagvaarding Janssen")
  caseNumber      String?  // Zaaknummer
  clientName      String?  // Cliëntnaam

  // Hoofddocument (dagvaarding)
  mainDocumentUrl   String?  // URL naar geüploade dagvaarding
  mainDocumentName  String?  // Originele bestandsnaam
  mainDocumentType  String?  // pdf, docx

  // Status
  status          String   @default("DRAFT") // DRAFT, READY, PRINTED

  // Timestamps
  createdById     String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Instellingen
  productionLabel      String   @default("PRODUCTIE") // PRODUCTIE | BIJLAGE
  includeProductielijst Boolean  @default(true) // Productielijst opnemen in PDF

  // Producties
  productions     WorkxflowProduction[]

  // Multi-user toegang
  access          BundleAccess[]
  lock            BundleLock?

  @@index([createdById])
  @@index([status])
}

// Individuele productie in een bundle
model WorkxflowProduction {
  id              String   @id @default(cuid())
  bundleId        String

  // Productie info
  productionNumber String  // Productienummer (1, 2, 1a, 1b, etc.)
  title           String   // Titel/beschrijving van de productie

  // Document
  documentUrl     String?  // URL naar geüploade document
  documentName    String?  // Originele bestandsnaam
  documentType    String?  // pdf, docx, jpg, png
  pageCount       Int      @default(1) // Aantal pagina's

  // Volgorde
  sortOrder       Int      @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  bundle          WorkxflowBundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@index([bundleId, sortOrder])
}

// Gedeelde toegang tot een bundle
model BundleAccess {
  id          String   @id @default(cuid())
  bundleId    String
  userId      String
  accessLevel String   @default("EDITOR") // VIEWER, EDITOR
  grantedAt   DateTime @default(now())
  grantedById String

  bundle      WorkxflowBundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  user        User            @relation("BundleAccessUser", fields: [userId], references: [id], onDelete: Cascade)
  grantedBy   User            @relation("BundleAccessGrantedBy", fields: [grantedById], references: [id], onDelete: Cascade)

  @@unique([bundleId, userId])
  @@index([userId])
}

// Bewerkingsslot op een bundle (voorkomt gelijktijdig bewerken)
model BundleLock {
  id             String   @id @default(cuid())
  bundleId       String   @unique
  lockedById     String
  lockedAt       DateTime @default(now())
  lastActivityAt DateTime @default(now())
  expiresAt      DateTime // Auto-verlopen na 5 minuten inactiviteit

  bundle         WorkxflowBundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  lockedBy       User            @relation(fields: [lockedById], references: [id], onDelete: Cascade)

  @@index([expiresAt])
}

