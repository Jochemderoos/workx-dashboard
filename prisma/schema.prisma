generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Rollen: EMPLOYEE (medewerker), PARTNER (Marnix, Jochem, Juliette, Bas), ADMIN (Hanna - kantoormanager)
// PARTNER en ADMIN kunnen vakantiesaldo beheren

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String
  password       String
  role           String    @default("EMPLOYEE") // EMPLOYEE, PARTNER, ADMIN
  avatarUrl      String?
  department     String?
  phoneNumber    String?
  birthDate      String?   // Verjaardag in MM-DD format
  startDate      DateTime? // Datum in dienst (voor transitievergoeding etc)
  werkdagen      String?   @default("1,2,3,4,5") // Standaard werkdagen patroon (1=Ma, 2=Di, etc)
  isActive       Boolean   @default(true) // Voor medewerkers die uit dienst zijn
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Chat relations
  sentMessages      ChatMessage[]     @relation("SentMessages")
  channelMemberships ChannelMember[]

  // Bonus calculations
  bonusCalculations BonusCalculation[]

  // Vacation
  vacationBalance   VacationBalance?
  vacationRequests  VacationRequest[]
  vacationPeriods   VacationPeriod[]
  createdPeriods    VacationPeriod[]  @relation("CreatedPeriods")
  parentalLeaves    ParentalLeave[]   // Multiple children supported

  // Work items
  assignedWork      WorkItem[]        @relation("AssignedWork")
  createdWork       WorkItem[]        @relation("CreatedWork")

  // Calendar events
  createdEvents     CalendarEvent[]   @relation("CreatedEvents")

  // Feedback
  feedback          Feedback[]

  // Lustrum packlist
  lustrumPacklist   LustrumPacklist?

  // Office attendance
  officeAttendances OfficeAttendance[]

  // Sick days
  sickDayEntries    SickDayEntry[]

  // Sessions for NextAuth
  sessions          Session[]
  accounts          Account[]

  // Compensation
  compensation      EmployeeCompensation?

  // Opleidingen
  createdTrainingSessions TrainingSession[] @relation("CreatedTrainingSessions")
  certificates            Certificate[]     @relation("UserCertificates")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== CHAT ====================

model ChatChannel {
  id          String    @id @default(cuid())
  name        String
  description String?
  isPrivate   Boolean   @default(false)
  isDirect    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  messages    ChatMessage[]
  members     ChannelMember[]
}

model ChannelMember {
  id        String   @id @default(cuid())
  userId    String
  channelId String
  joinedAt  DateTime @default(now())

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel   ChatChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([userId, channelId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  senderId  String
  channelId String
  parentId  String?  // For threads
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isEdited  Boolean  @default(false)

  sender    User        @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  channel   ChatChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  parent    ChatMessage? @relation("ThreadReplies", fields: [parentId], references: [id])
  replies   ChatMessage[] @relation("ThreadReplies")
}

// ==================== BONUS CALCULATOR ====================

model BonusCalculation {
  id              String   @id @default(cuid())
  userId          String
  invoiceAmount   Float    // Bedrag excl. BTW
  bonusPercentage Float    // Bonuspercentage
  bonusAmount     Float    // Berekend bonusbedrag
  invoicePaid     Boolean  @default(false) // Factuur betaald door klant
  bonusPaid       Boolean  @default(false) // Bonus uitbetaald aan medewerker
  description     String?
  invoiceNumber   String?
  clientName      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==================== VACATION ====================

model VacationBalance {
  id                    String   @id @default(cuid())
  userId                String   @unique
  year                  Int
  overgedragenVorigJaar Float    @default(0)  // Overgedragen van vorig jaar
  opbouwLopendJaar      Float    @default(25) // Opbouw dit jaar (standaard 25)
  bijgekocht            Float    @default(0)  // Extra gekochte dagen
  opgenomenLopendJaar   Float    @default(0)  // Opgenomen dit jaar
  note                  String?              // Extra informatie
  updatedById           String?              // Wie heeft dit laatst aangepast (Hanna/Partner)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user    User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  periods VacationPeriod[]
}

// Vakantieperiodes - voor het bijhouden van specifieke vakantieperiodes met parttime ondersteuning
model VacationPeriod {
  id          String   @id @default(cuid())
  userId      String
  balanceId   String
  year        Int
  startDate   DateTime
  endDate     DateTime
  werkdagen   String   // "1,2,3,4,5" = Ma-Vr, werkdagen die meetellen
  days        Float    // Berekende vakantiedagen
  note        String?
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance   VacationBalance @relation(fields: [balanceId], references: [id], onDelete: Cascade)
  createdBy User            @relation("CreatedPeriods", fields: [createdById], references: [id])

  @@index([userId, year])
  @@index([balanceId])
}

// Ouderschapsverlof tracking - ondersteunt meerdere kinderen per medewerker
model ParentalLeave {
  id                      String   @id @default(cuid())
  userId                  String
  childNumber             Int      @default(1)  // Kind nummer (1, 2, etc.)

  // Kind informatie
  kindNaam                String?              // Naam van het kind
  kindGeboorteDatum       DateTime?            // Geboortedatum (of null als nog niet geboren)
  uitgerekendeDatum       DateTime?            // Uitgerekende datum (voor zwangerschap)

  // Zwangerschapsverlof (WAZO) - 16 weken
  zwangerschapsverlofStart    DateTime?        // Startdatum WAZO
  zwangerschapsverlofStatus   String?          // Status tekst (bijv. "16 weken ontvangen")

  // Geboorteverlof partner - 1 week + 5 weken aanvullend
  geboorteverlofPartner       String?          // Status/details geboorteverlof partner
  aanvullendVerlofPartner     String?          // 5 weken aanvullend partnerverlof

  // Betaald ouderschapsverlof - 9 weken (70% UWV)
  betaaldTotaalUren       Float    @default(324) // 9 weken x 36 uur = 324 uur
  betaaldOpgenomenUren    Float    @default(0)
  betaaldVerlofDetails    String?  @db.Text     // Details over opname
  betaaldVerlofEinddatum  DateTime?            // Laatste dag betaald verlof

  // Onbetaald ouderschapsverlof - 17 weken
  onbetaaldTotaalDagen    Float    @default(85) // 17 weken = 85 dagen
  onbetaaldOpgenomenDagen Float    @default(0)
  onbetaaldVerlofDetails  String?  @db.Text     // Details over opname
  onbetaaldVerlofEinddatum DateTime?           // Laatste dag onbetaald verlof

  // UWV status
  uwvAangevraagd          Boolean  @default(false)
  uwvDetails              String?  @db.Text     // Details over UWV aanvraag/ontvangst

  // Algemeen
  note                    String?  @db.Text     // Extra notities
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, childNumber])
  @@index([userId])
}

model VacationRequest {
  id          String   @id @default(cuid())
  userId      String
  startDate   DateTime
  endDate     DateTime
  days        Float         // Aantal dagen
  reason      String?
  status      String   @default("PENDING")
  approvedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

// ==================== WORK ITEMS ====================

model WorkItem {
  id           String    @id @default(cuid())
  title        String
  description  String?
  status       String    @default("NEW")
  priority     String    @default("MEDIUM")
  dueDate      DateTime?
  estimatedHours Float?
  actualHours  Float?
  assigneeId   String?
  createdById  String
  clientName   String?
  caseNumber   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  assignee     User?     @relation("AssignedWork", fields: [assigneeId], references: [id])
  createdBy    User      @relation("CreatedWork", fields: [createdById], references: [id])
}

// ==================== TRANSITIEVERGOEDING (voor opslag berekeningen) ====================

model TransitieCalculation {
  id               String   @id @default(cuid())
  employerName     String?
  employeeName     String
  startDate        String   // ISO date string
  endDate          String   // ISO date string
  salary           Float
  vacationMoney    Boolean  @default(true)
  vacationPercent  Float    @default(8)
  thirteenthMonth  Boolean  @default(false)
  bonusType        String   @default("none") // none, fixed, average
  bonusFixed       Float    @default(0)
  bonusYear1       Float    @default(0)
  bonusYear2       Float    @default(0)
  bonusYear3       Float    @default(0)
  bonusOther       Float    @default(0)
  overtime         Float    @default(0)
  other            Float    @default(0)
  isPensionAge     Boolean  @default(false)
  totalSalary      Float
  yearlySalary     Float
  amount           Float
  amountBeforeMax  Float
  years            Int
  months           Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// ==================== FEEDBACK ====================

model Feedback {
  id          String   @id @default(cuid())
  type        String   @default("IDEA") // IDEA, BUG
  title       String
  description String
  status      String   @default("NEW") // NEW, IN_PROGRESS, DONE, WONT_FIX
  response    String?
  processed   Boolean  @default(false) // Checkbox for admin to mark as processed
  processedAt DateTime? // When marked as processed (for auto-delete after 5 days)
  submittedById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  submittedBy User @relation(fields: [submittedById], references: [id], onDelete: Cascade)

  @@index([processed])
}

// ==================== GEDEELDE AGENDA ====================

model CalendarEvent {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  isAllDay    Boolean  @default(false)
  location    String?
  color       String   @default("#f9ff85") // Workx lime als default
  category    String   @default("GENERAL")
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy   User     @relation("CreatedEvents", fields: [createdById], references: [id])

  @@index([startTime])
  @@index([endTime])
  @@index([createdById])
}

// ==================== FINANCIEN ====================

// 2026 data invoer - één record voor het hele kantoor
model FinancialData2026 {
  id                 String   @id @default(cuid())
  werkgeverslasten   String   // JSON array van 12 getallen
  omzet              String   // JSON array van 12 getallen
  uren               String   // JSON array van 12 getallen
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

// Budgetten - gedeeld voor het hele kantoor
model Budget {
  id        String   @id @default(cuid())
  name      String
  budget    Float
  spent     Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== WERKDRUK ====================

// Werkdruk tracking - alleen in te vullen door Partners en Admin
model Workload {
  id         String   @id @default(cuid())
  personName String   // Naam van de medewerker
  date       String   // YYYY-MM-DD format
  level      String   // green, yellow, orange, red
  hours      Float?   // Optioneel: aantal uren (uit upload)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([personName, date])
}

// ==================== MAANDELIJKSE UREN ====================

// Urenoverzicht per medewerker per maand - voor PARTNER en ADMIN
model MonthlyHours {
  id             String   @id @default(cuid())
  employeeName   String   // Naam van de medewerker
  year           Int      // Jaar (2025, 2026, etc.)
  month          Int      // Maand (1-12)
  billableHours  Float    @default(0) // Factureerbare uren
  workedHours    Float    @default(0) // Bestede uren
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([employeeName, year, month])
}

// ==================== LUSTRUM 2026 ====================

// Vluchtgegevens voor de Mallorca trip
model LustrumFlight {
  id               String   @id @default(cuid())
  // Heenvlucht
  outboundDate          String
  outboundDepartureTime String?
  outboundArrivalTime   String?
  outboundFlightNumber  String?
  outboundDepartureAirport String @default("AMS")
  outboundArrivalAirport   String @default("PMI")
  // Terugvlucht
  returnDate            String
  returnDepartureTime   String?
  returnArrivalTime     String?
  returnFlightNumber    String?
  returnDepartureAirport String @default("PMI")
  returnArrivalAirport   String @default("AMS")
  // Meta
  updatedById      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Programma items voor de Mallorca trip
model LustrumProgram {
  id          String   @id @default(cuid())
  date        String   // YYYY-MM-DD
  time        String?  // HH:MM
  title       String
  description String?
  responsible String   @default("[]") // JSON array van namen
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Inpaklijst per gebruiker
model LustrumPacklist {
  id          String   @id @default(cuid())
  userId      String
  checkedItems String  @default("[]") // JSON array van item IDs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

// Ideeënbox voor Lustrum - iedereen kan ideeën insturen
model LustrumIdea {
  id          String   @id @default(cuid())
  content     String   // Het idee
  submittedBy String   // Naam van de inzender
  isAnonymous Boolean  @default(false)
  createdAt   DateTime @default(now())
}

// ==================== SALARISHUIS & ARBEIDSVOORWAARDEN ====================

// Salarisschaal - het salarishuis
model SalaryScale {
  id              String   @id @default(cuid())
  experienceYear  Int      @unique // 0 = juridisch medewerker, 1 = 1e jaars, etc.
  label           String   // "Juridisch medewerker", "1e jaars", etc.
  salary          Float    // Bruto maandsalaris
  hourlyRateBase  Float    // Basis uurtarief
  hourlyRateMin   Float?   // Minimum range
  hourlyRateMax   Float?   // Maximum range
  validFrom       DateTime @default(now()) // Geldig vanaf datum
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Medewerker arbeidsvoorwaarden - per medewerker
model EmployeeCompensation {
  id              String   @id @default(cuid())
  userId          String   @unique
  experienceYear  Int?     // Hoeveelste jaars (null voor support staff zoals Hanna/Lotte)
  hourlyRate      Float    // Actueel uurtarief (kan afwijken van schaal)
  salary          Float?   // Handmatig ingevoerd salaris (voor Hanna/Lotte)
  isHourlyWage    Boolean  @default(false) // True voor uurloners zoals Lotte
  notes           String?  // Notities
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==================== ZIEKTEDAGEN ====================

// Individuele ziektedag registraties - met start en einddatum voor periodes
model SickDayEntry {
  id           String   @id @default(cuid())
  userId       String
  startDate    DateTime // Startdatum (of enkele dag)
  endDate      DateTime // Einddatum (zelfde als startDate voor enkele dag)
  workDays     Float    // Berekende werkdagen (ma-vr)
  note         String?  // Optionele notitie
  createdById  String?  // Wie heeft dit ingevoerd
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startDate])
  @@index([userId])
}

// ==================== KANTOOR AANWEZIGHEID ====================

// Appjeplekje - Kantoor aanwezigheid registratie
model OfficeAttendance {
  id        String   @id @default(cuid())
  userId    String
  date      String   // YYYY-MM-DD format
  timeSlot  String   @default("FULL_DAY") // FULL_DAY, MORNING, AFTERNOON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
}

// ==================== OPLEIDINGEN ====================

// Workx Opleiding sessies - sprekers, data, onderwerpen
model TrainingSession {
  id          String   @id @default(cuid())
  title       String   // Onderwerp van de opleiding
  speaker     String   // Naam van de spreker
  date        DateTime // Datum van de sessie
  startTime   String?  // Starttijd (HH:MM)
  endTime     String?  // Eindtijd (HH:MM)
  location    String?  // Locatie
  description String?  @db.Text // Beschrijving
  points      Float    @default(1) // PO-punten
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy   User     @relation("CreatedTrainingSessions", fields: [createdById], references: [id])

  @@index([date])
}

// Certificaten van individuele opleidingen
model Certificate {
  id              String   @id @default(cuid())
  userId          String
  year            Int      // Jaar van de opleiding
  trainingName    String   // Naam van de opleiding
  provider        String?  // Opleidingsinstituut
  completedDate   DateTime // Datum afgerond
  points          Float    // Behaalde punten
  certificateUrl  String?  // URL naar opgeslagen certificaat
  ocrProcessed    Boolean  @default(false) // Of OCR is toegepast
  ocrRawText      String?  @db.Text // Ruwe OCR tekst voor debugging
  note            String?  // Extra notities
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation("UserCertificates", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, year])
  @@index([year])
}

// ==================== HR DOCUMENTEN ====================

// HR Document hoofdstukken - voor The Way it Workx etc.
model HRDocumentChapter {
  id           String   @id @default(cuid())
  documentId   String   // 'the-way-it-workx' etc.
  chapterId    String   // 'welkom', 'start', etc.
  title        String
  icon         String   // Emoji
  content      String   @db.Text // HTML content
  sortOrder    Int      @default(0)
  updatedById  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([documentId, chapterId])
  @@index([documentId])
}
